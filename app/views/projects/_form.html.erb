<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@project.errors.count, 'error') %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_field :description, autofocus: true, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :lead %>
    <%= f.collection_select :lead, Staff.all.collect, :id, :name_full, {prompt: true}, class: 'form-control' %>
  </div>
  <div class='checkbox'>
    <%= f.collection_check_boxes :staff_ids, @staffs, :id, :name_full, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
